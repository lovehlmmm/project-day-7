@using Entities
@using Constants
@{
    var user = ViewBag.User as User;
}



            <table class="table table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @if (user != null)
                    {
                        if (user.Customer.Addresses != null)
                        {
                            foreach (var item in user.Customer.Addresses.Where(a => a.Status.Equals(Status.Active)))
                            {
                                <tr>
                                    <td>@item.Customer.CustomerName</td>
                                    <td>@item.AddressDetails</td>
                                    <td>@(item.Customer.PhoneNumber != null ? item.Customer.PhoneNumber : string.Empty)</td>
                                    <td>
                                        <input data-id="@item.AddressId"  type="radio" name="chooseAddress">
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <div class="form-group py-4">
                <button class="btn btn-success btn-lg"  id="saveChooseAddress">Save</button>
            </div>
  

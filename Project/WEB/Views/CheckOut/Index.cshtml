@using Constants
@using Helpers
@using WEB.Models
@using Entities
@{
    ViewBag.Title = "Check Out - Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var showCart = ViewBag.Cart;
    var showAddress = ViewBag.Customer.Addresses;

 
}
@section css{
    <style type="text/css">

        /*Breadcrumbs*/
        .breadcrumbs {
            padding: 10px 0 6px;
            box-shadow: inset 0 0 4px #eee;
            background: url("https://formden.com/static/assets/img/breadcrumbs.png") repeat;
        }

            .breadcrumbs h1 {
                color: #686868;
                font-size: 26px;
                margin-top: 12px;
            }

        .breadcrumb {
            top: 9px;
            padding-right: 0;
            background: none;
            position: relative;
        }

            .breadcrumb a {
                color: #777;
            }

            .breadcrumb li.active,
            .breadcrumb li a:hover {
                color: #72c02c;
                text-decoration: none;
            }

        .margin-bottom-30 {
            margin-bottom: 30px;
        }

        .btn-template-main {
            color: #38a7bb;
            background-color: #fff;
            border-color: #38a7bb;
        }

        .dl-small {
            margin-bottom: 4px;
        }


        .form-control {
            width: auto;
        }

        .form-control-small {
            width: 100px;
        }

        .form-control-large {
            width: 310px;
        }
    </style>

}

@section script{
    <script src="~/Scripts/checkOut.js"></script>
}
<!-- Preloader section
================================================== -->
<div class="preloader">
    <div class="sk-spinner sk-spinner-pulse"></div>
</div>



<!-- Navigation section
================================================== -->
<div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">

        <div class="navbar-header">
            <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
                <span class="icon icon-bar"></span>
            </button>
            <a href="#" class="navbar-brand">TEAM SiX</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/upload" class="smoothScroll">UPLOAD</a></li>
                <li><a href="#" class="smoothScroll">MY ORDERS</a></li>
                <li><a href="/info" class="smoothScroll">ACCOUNT</a></li>


            </ul>
        </div>

    </div>
</div>

<!-- Home section
================================================== -->
<div class="breadcrumbs margin-bottom-30">
    <div class="container">
        <h1 class="pull-left">Checkout Order</h1>
        <ul class="pull-right breadcrumb">

            <li><a href="/">Home</a></li>
            <li class="active">Checkout Order</li>
        </ul>
    </div>
</div>

<div class="container">
    <div class="row">
        <!--Cart Payment-->
        <div class="col-md-8">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <table id="cart" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th style="width:30%">Product</th>
                        <th style="width:20%">Options</th>
                        <th style="width:20%" class="text-center">Price</th>
                        <th style="width:5%">Quantity</th>
                        <th style="width:5%"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (showCart != null)
                    {
                        foreach (var item in showCart as List<CartItem>)
                        {
                            <tr>
                                <td data-th="Product">
                                    <div class="row">
                                        <div class="col-sm-6 hidden-xs"><img src="data:@item.ImageType;base64,@item.Image" alt="..." class="img-responsive" /></div>

                                    </div>
                                </td>

                                <td>
                                    @{List<string> options = new List<string> { "Delete Background", "Increase Quality", "Blur The Background" };
                                        for (int i = 1; i < options.Count + 1; i++)
                                        {
                                            if (i == item.Option)
                                            {
                                                <span>@options[i]</span>
                                            }
                                        }
                                    }
                                </td>
                                @{ var subTotal = (item.Quantity * (item.Product.ProductPrice + item.Material.Price));}
                                <td data-th="Price" class="text-center">@(subTotal != null ? subTotal.Value.ToString("0,0") : string.Empty) VND</td>
                                <td data-th="Quantity">
                                    <input type="number" class="form-control text-center" value="@item.Quantity" min="1">
                                </td>

                                <td class="actions" data-th="">
                                    <button class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i></button>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
                <tfoot>
                    <tr class="visible-xs"></tr>
                    <tr>
                        <td><a href="#" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Upload</a></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>

                    </tr>
                </tfoot>
            </table>
        </div>


        <!-- Address modal -->
        <div id="modalAddress" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        </div>

        <!--Info Payment-->
        <div class="col-md-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Info Payment : </span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed" >
                    <div>
                        <h4 class="my-0">
                            Payment Shipping
                        </h4>
                        @if (showAddress != null)
                        {
                            var addre = showAddress.First();
                            <h5 class="text-danger">@addre.Customer.CustomerName</h5>
                            <h6 class="text-muted">@addre.AddressDetails</h6>
                            <span class="text-muted">@(addre.Customer.PhoneNumber != null ? addre.Customer.PhoneNumber : string.Empty) </span>
                        }

                    </div>
                    <a href="#" id="showAddress"> <h5 class="text-primary">Chỉnh Sửa</h5> </a>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed" >
                    <div>
                        <h5 class="my-0">Phone Number</h5>
                        <input maxlength="10" type="text" style="width:97%" class="form-control" id="" name="" placeholder="Enter Phone">
                    </div>
                </li>

                <li class="list-group-item d-flex justify-content-between" >
                    <h3>Total (VND)</h3>
                    <h4> <strong>$20</strong>  </h4>
                </li>
            </ul>
            <button class="btn btn-success btn-lg" style="float:right" data-dismiss="modal" aria-hidden="true">Confirm Checkout</button>
        </div>
    </div>
</div>
<hr>

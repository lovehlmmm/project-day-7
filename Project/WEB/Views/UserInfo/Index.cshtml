<!-- Home section -->
<div class="breadcrumbs margin-bottom-30">
    <div class="container">
        <h1 class="pull-left">My Information</h1>
        <ul class="pull-right breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active">Your Info</li>

<!-- Home section
================================================== -->
<div class="breadcrumbs margin-bottom-30">
    <div class="container">
        <h1 class="pull-left">Login</h1>
        <ul class="pull-right breadcrumb">

            <li><a href="/">Home</a></li>

            <li class="active">Login</li>
        </ul>
    </div>
</div>


<div class="container" id="body">
    <!--=== Content Part ===-->
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <form style="margin-top: 25px;" class="reg-page" method="post"  id="formLogin">
                     <div class="reg-header">
                        <h3>Login to your account</h3>
                    </div>
                    <div class="input-group margin-bottom-20">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input  maxlength="254" name="username" type="text" placeholder="Username" tabindex="1" class="form-control" data-validate="UserName is required!">
                    </div>
                    <div class="input-group margin-bottom-20">
                        <span class="input-group-addon"><i class="icon-lock"></i></span>
                        <input name="password" type="password" placeholder="Password" tabindex="2" class="form-control" data-validate="Password is required!">
                    </div>
                    <div class="form-group" id="div_checkbox">
                             <label class="checkbox-inline">
                                <input name="remember" type="checkbox"/>
                                Remember me.
                            </label>
                     </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-success btn-block" type="submit" tabindex="3">Login</button>
                        </div>
                    </div>

                    <hr>

                    <h4>Forget your Password?</h4>
                    <p><a class="color-green" href="#">Click here</a> to reset your password.</p>

                    <hr>
                    <h4>Need to Register?</h4>
                    <p><a class="color-green" href="#">Click here</a> to register.</p>
                </form>
            </div>
        </div><!--/row-->
    </div><!--/container-->
    <br><br>
</div>

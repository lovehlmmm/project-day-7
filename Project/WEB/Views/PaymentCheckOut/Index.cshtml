<div class="container" style="margin-top: 25px;">
    <div class="row">


        <div style="text-align: center;">
            <i class="fa fa-credit-card fa-3x text-primary"></i>
            <h2 class="text-center">Payment</h2>
        </div>
        <h4> Ship my order to&hellip;</h4>
        <div class="list-group">
            <div class="list-group-item">
                <div class="list-group-item-heading">
                    <div class="row radio">
                        @if (checkOut != null)
                        {

                            <div class="col-sm-8" style="text-align: center;">
                                <h3 class="text-danger">@user.Customer.CustomerName</h3>
                                <h4 class="text-decoration">@checkOut.Address.AddressDetails</h4>
                                <h5 class="text-primary">@checkOut.PhoneNumber</h5>
                            </div>
                            <div class="col-xs-3 text-success">
                                <h4>Payment amount : </h4>
                                <h3><strong>@(showCart!=null?showCart.Sum(c=>c.Quantity*(c.Product.ProductPrice+c.Material.Price)).Value.ToString("0,0"):string.Empty)VND</strong>  </h3>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <h4>I'll pay with&hellip;</h4>
            <div class="list-group">
                <div class="list-group-item">
                    <div class="list-group-item-heading">
                        <div class="row radio">
                            <div class="col-xs-3">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2" checked>
                                    My Visa Card
                                </label>
                            </div>

                            <div class="col-xs-9">
                                <div class="row">
                                    @if (user != null)
                                    {
                                        var userC = user as User;
                                        var showCre = userC.Customer.CreditCards.FirstOrDefault(c=>c.Status.Equals(Status.Active));
                                        if (showCre==null)
                                        {
                                            showCre = new CreditCard();
                                        }
                                        <div class="col-xs-4">
                                            <dl class="dl-small">
                                                <dt>Credit Card Number</dt>
                                                <dd class="creditDetails" data-id="@(showCre.CreditCardId)">@(showCre.CreditNumber!=null?showCre.CreditNumber:string.Empty)</dd>
                                            </dl>
                                        </div>
                                        <div class="col-xs-2">
                                            <dl class="dl-small">
                                                <dt>Expiration</dt>
                                                <dd class="creditEx">@showCre.Expire</dd>
                                            </dl>
                                        </div>
                                        <div class="col-xs-6">
                                            <dl class="dl-small">
                                                <dt>Billing Address</dt>
                                                <dd>1509 Latona St, Philadelphia, PA 19146 </dd>
                                            </dl>
                                        </div>
                                    }
                                </div>
                                <button id="showCredit" class="btn btn-sm btn-link">Choose another</button>
                             
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Credit modal -->
                <div id="modalCredit" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header" style="text-align: left;">
                                <h5>
                                    Credit Card
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            </div>
                            <div class="modal-body">

                            </div>
                        </div>
                    </div>
                </div>
                <!-- End modal -->

                <div class="list-group-item">
                    <div class="list-group-item-heading">
                        <div class="row radio">
                            <div class="col-xs-3">
                                <label data-toggl-e="collapse" data-target="#newcard">
                                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                    A New Credit Card
                                </label>
                            </div>
                            <div class="col-xs-9">
                                <div class="media">
                                    <a class="media-left" href="#">
                                        <img src="https://lovewithfood.com/assets/credit_cards/cards-b3a7c7b8345355bf110ebedfd6401312.png" height="25" alt="" />
                                    </a>
                                    <div class="media-body" id="newcard">
                                        We accept these credit cards.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="list-group-item">
                    <div class="list-group-item-heading">
                        <div class="row radio">
                            <div class="col-xs-3">
                                <label>
                                    <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
                                    PayPal
                                </label>
                            </div>
                            <div class="col-xs-9">
                                <div class="media">
                                    <a class="media-left" href="#">
                                        <img src="https://www.paypalobjects.com/webstatic/mktg/logo-center/PP_Acceptance_Marks_for_LogoCenter_76x48.png" height="25" alt="" />
                                    </a>
                                    <div class="media-body">
                                        When you click "Place Order", you will be taken to the PayPal website.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="well">
                <button type="button" class="btn btn-success btn-lg btn-block">Place Order</button>
            </div>
        </div>
    </div>
</div>


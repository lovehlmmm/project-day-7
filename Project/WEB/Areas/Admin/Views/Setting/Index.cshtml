@using WEB.Areas.Admin.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var appEmail = ViewBag.AppMail as EmailAppModel;
}
@section script{
<script src="~/Areas/Admin/Assets/js/setting.js"></script>
    }

<div class="row">
    <div class="col-xl-12">
        <div class="page-title-box">
            <h4 class="page-title float-left">Setting</h4>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!-- end row -->
<div class="row">
    <div class="col-12">
        <div class="card-box">
            <div class="row m-t-50">
                <div class="col-12 m-t-20">
                    <!-- End -->
                    <table class="table  table-hover">
                        <thead>
                            <tr style="background-color:#2B3D51;color:white;">
                                <th>#</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td style="text-align:center">
                                    <button id="edit-email" class="btn waves-effect waves-light btn-warning" style="padding:5px"> <i class="fa fa-edit"></i> </button>
                                    <button id="" class="btn waves-effect waves-light btn-danger disabled" style="padding:5px"> <i class="fa fa-remove"></i> </button>
                                </td>
                            </tr>

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalMail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Sign up</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="modal-body mx-1">
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right">Email</label>
                        <input placeholder="Email" value="@appEmail.Email" type="email" id="email" required name="email" class="form-control validate">

                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="orangeForm-pass">Password</label>
                        <input required type="password" value="@appEmail.Password" id="" name="password" class="form-control validate">

                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right" for="orangeForm-email">Host</label>
                        <input type="text" required value="@appEmail.Stmp" id="" type="text" name="host" class="form-control validate">
                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right">Port</label>
                        <input type="text" id="" value="@appEmail.Port" required name="port" class="form-control validate">
                    </div>
                    <div class="md-form mb-1">
                        <label data-error="wrong" data-success="right">Email receive code</label>
                        <input type="email" id="" required name="email-code" class="form-control validate">
                    </div>
                    <div class="md-form mb-1 code-email">
                        <label data-error="wrong" data-success="right">Code</label>
                        <input type="email" id="" required name="code" class="form-control validate">
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button id="save-email" class="btn btn-deep-orange" type="button" style="cursor:pointer">Send</button>
                </div>
            </form>

        </div>
    </div>
</div>
<!-- end row -->
